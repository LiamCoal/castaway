<?xml version="1.0" encoding="UTF-8"?>

<Level For="OpenGL">
    <Object>
        <Name>Camera</Name>
        <Controllers>
            <PerspCamera>
                <ID>0</ID>
                <VerticalFOV>90</VerticalFOV>
            </PerspCamera>
            <Player/>
        </Controllers>
    </Object>

    <Object>
        <Name>Light</Name>

        <Position>0,0,0</Position>

        <Controllers>
            <Light>
                <Type>Point</Type>
            </Light>
        </Controllers>
    </Object>

    <Object>
        <Name>Object 1</Name>

        <Position>0,10,-3</Position>
        <Scale>1,1,1</Scale>
        <Rotation>0,0,0</Rotation>

        <Controllers>
            <Shader>
                <Builtin>Default</Builtin>
            </Shader>
            <LoadedMesh>
                <AssetPath>/cube.obj</AssetPath>
            </LoadedMesh>
            <MeshRenderer/>
            <Collider.Box>
                <Size>2,2,2</Size>
            </Collider.Box>
            <Physics>
                <Mode>Dynamic</Mode>
            </Physics>
        </Controllers>
    </Object>

    <Object>
        <Name>Object 2</Name>

        <Position>0,0,-3</Position>
        <Scale>1,1,1</Scale>
        <Rotation>0,0,0</Rotation>

        <Controllers>
            <Shader>
                <Builtin>Default</Builtin>
            </Shader>
            <LoadedMesh>
                <AssetPath>/cube.obj</AssetPath>
            </LoadedMesh>
            <MeshRenderer/>
            <Collider.Mesh/>
            <Physics>
                <Mode>Static</Mode>
            </Physics>
        </Controllers>
    </Object>
</Level>