<?xml version="1.0" encoding="UTF-8"?>

<Level For="OpenGL">
    <Object>
        <Name>Camera</Name>
        <Controllers>
            <PerspCamera>
                <ID>0</ID>
                <VerticalFOV>90</VerticalFOV>
            </PerspCamera>
            <GenericPlayer/>
        </Controllers>
    </Object>

    <Object>
        <Name>Light</Name>

        <Position>0,0,-2</Position>

        <Controllers>
            <Light>
                <Type>Point</Type>
            </Light>
        </Controllers>
    </Object>

    <Object>
        <Name>Object 1</Name>

        <Position>0,100,-3</Position>
        <Scale>1,1,1</Scale>
        <Rotation>45,45,45</Rotation>

        <Controllers>
            <Shader>
                <Builtin>Default</Builtin>
            </Shader>
            <LoadedMesh>
                <AssetPath>/cube.obj</AssetPath>
            </LoadedMesh>
            <MeshRenderer/>
            <Collider.Box>
                <Mode>Dynamic</Mode>
            </Collider.Box>
        </Controllers>
    </Object>

    <Object>
        <Name>Object 2</Name>

        <Position>0,0,-3</Position>
        <Scale>1,1,1</Scale>

        <Controllers>
            <Shader>
                <Builtin>Default</Builtin>
            </Shader>
            <LoadedMesh>
                <AssetPath>/cube.obj</AssetPath>
            </LoadedMesh>
            <MeshRenderer/>
            <Collider.Box>
                <Mode>Static</Mode>
            </Collider.Box>
        </Controllers>
    </Object>
</Level>